@page
@model BookListRazor.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Add new book</h1>
<div class="border container" style="padding:50px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="book.Name"></label>
            </div>
            <div class="col-7">
                <input asp-for="book.Name" class="form-control" />
                <span asp-validation-for="book.Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="book.Author"></label>
            </div>
            <div class="col-7">
                <input asp-for="book.Author" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-3 offset-4">
                <input class="btn btn-primary form-control" type="submit" value="Add"></input>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}